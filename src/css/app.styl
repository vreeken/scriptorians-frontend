@import url('https://fonts.googleapis.com/css?family=Bitter|Fugaz+One');

// app global css

body {
	background-color : #f8f5ef;
	color: #111;
}

.header-font {
	font-family: 'Fugaz One', sans-serif;
}
.scripture-font {
	font-family: 'Bitter', serif;
	font-size: 1rem;
}
.scripture-container {
	width: 100%;
	max-width: 600px;
}
.chapter-header {
	text-align: center;
	font-size: 2rem;
	margin: 1rem auto;
}

.content-container {
	margin: 1rem auto;
	width: 92%;
	max-width: 1200px;
}

.registration-title {
	text-align: center;
	font-size: 2rem;
}
.registration-form {
	width: 92%;
	max-width: 450px;
}


.flexgrow {
	flex: 1;
}

.svg-white {
	fill: #FFFFFF;
}
.svg-black {
	fill: #000000;
}

@media (max-width: 767px) {
	.lt-tablet-hide {
    	display: none !important;
    }
}
